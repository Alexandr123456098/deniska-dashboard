      <a class="btn" href="/logs/stream/{unit}" target="_blank" rel="noopener">Live</a>
      <button class="btn warn" onclick="doRestart('{unit}')">Restart</button>
    </div>
  </td>
</tr>"""

def badge(status):
    if status == "active":   return '<span class="b b-ok">‚óè Active</span>'
    if status == "inactive": return '<span class="b b-warn">‚óè not found</span>'
    return '<span class="b b-warn">‚óè not found</span>'

@app.get("/")
