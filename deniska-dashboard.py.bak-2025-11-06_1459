            status_badge=badge(r["status"])
        ))
    rows_html = "\n".join(rows)
    t = datetime.now().strftime("%Y-%m-%d %H:%M:%S")
    tg_on = ("on" if (TG.get("TG_BOT") and TG.get("TG_CHAT")) else "off")
